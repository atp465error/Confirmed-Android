<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:gravity="bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tt_menu_item_size"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="16dp"
        android:background="@drawable/white_drawable_checkable"
        android:onClick="accountButtonClicked"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/icon_nav_account"
        android:layout_width="@dimen/design_navigation_icon_size"
        android:layout_height="@dimen/design_navigation_icon_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:tint="@color/blue_checkable"
        android:src="@drawable/tt_menu_account_icon_24dp"/>
    <TextView
        android:id="@+id/btn_account_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/icon_nav_account"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/design_navigation_icon_padding"
        android:fontFamily="@font/lato_light"
        android:fontFeatureSettings="liga 0"
        android:textColor="@color/blue_checkable"
        android:textSize="@dimen/tt_menu_item_text_size"
        android:text="@string/tt_show_account"/>
    </RelativeLayout>

</LinearLayout>